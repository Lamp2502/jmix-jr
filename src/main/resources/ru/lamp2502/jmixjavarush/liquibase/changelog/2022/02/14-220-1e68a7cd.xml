<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.3.xsd"
        objectQuotingStrategy="QUOTE_ONLY_RESERVED_WORDS">
    <changeSet id="1" author="jmixjavarush">
        <addColumn tableName="TASK_">
            <column name="ACTIONS" type="VARCHAR(255)"/>
            <column name="ADMINISTRATOR_ID" type="UUID"/>
            <column name="CONTRAGENT" type="VARCHAR(255)"/>
            <column name="DOCUMENT_ID" type="UUID"/>
            <column name="PERFORM_BEFORE" type="DATE"/>
            <column name="STATUS" type="VARCHAR(255)"/>
        </addColumn>
    </changeSet>
    <changeSet id="2" author="jmixjavarush">
        <addForeignKeyConstraint baseColumnNames="ADMINISTRATOR_ID" baseTableName="TASK_"
                                 constraintName="FK_TASK__ON_ADMINISTRATOR" referencedColumnNames="ID"
                                 referencedTableName="USER_"/>

        <createIndex indexName="IDX_TASK_ADMINISTRATOR_ID" tableName="TASK_">
            <column name="ADMINISTRATOR_ID"/>
        </createIndex>
    </changeSet>
    <changeSet id="3" author="jmixjavarush">
        <addForeignKeyConstraint baseColumnNames="DOCUMENT_ID" baseTableName="TASK_"
                                 constraintName="FK_TASK__ON_DOCUMENT" referencedColumnNames="ID"
                                 referencedTableName="CONTRACT"/>

        <createIndex indexName="IDX_TASK_DOCUMENT_ID" tableName="TASK_">
            <column name="DOCUMENT_ID"/>
        </createIndex>
    </changeSet>
    <changeSet id="4" author="jmixjavarush">
        <dropColumn columnName="TITEL" tableName="TASK_"/>
    </changeSet>
</databaseChangeLog>