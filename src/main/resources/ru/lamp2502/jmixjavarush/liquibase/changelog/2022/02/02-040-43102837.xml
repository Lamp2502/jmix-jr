<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.3.xsd"
        objectQuotingStrategy="QUOTE_ONLY_RESERVED_WORDS">
    <changeSet id="1" author="jmixjavarush">
        <addColumn tableName="DOCUMENT">
            <column name="AMOUNT" type="DOUBLE"/>
            <column name="CONTRACT_ID" type="UUID"/>
            <column name="NUMBER_" type="INT"/>
            <column name="PERFORMER" type="VARCHAR(255)"/>
            <column name="STATUS" type="VARCHAR(255)"/>
            <column name="TYPE_" type="VARCHAR(255)"/>
        </addColumn>
    </changeSet>
    <changeSet id="2" author="jmixjavarush">
        <addColumn tableName="CONTRACT">
            <column name="COMMUNICATION_TYPE" type="VARCHAR(255)"/>
            <column name="NUMBER_" type="INT"/>
            <column name="STATUS" type="VARCHAR(255)"/>
            <column name="TYPE_" type="VARCHAR(255)"/>
        </addColumn>
    </changeSet>
    <changeSet id="3" author="jmixjavarush">
        <addColumn tableName="DOCUMENT">
            <column name="CUSTOMER" type="VARCHAR(255)"/>
        </addColumn>

        <addNotNullConstraint columnName="CUSTOMER" tableName="DOCUMENT"/>
    </changeSet>
    <changeSet id="4" author="jmixjavarush">
        <addColumn tableName="CONTRACT">
            <column name="VERSION" type="INT"/>
        </addColumn>

        <addNotNullConstraint columnName="VERSION" defaultNullValue="0" tableName="CONTRACT"/>
    </changeSet>
    <changeSet id="5" author="jmixjavarush">
        <addForeignKeyConstraint baseColumnNames="CONTRACT_ID" baseTableName="DOCUMENT"
                                 constraintName="FK_DOCUMENT_ON_CONTRACT" onDelete="CASCADE" referencedColumnNames="ID"
                                 referencedTableName="CONTRACT"/>

        <createIndex indexName="IDX_DOCUMENT_CONTRACT_ID" tableName="DOCUMENT">
            <column name="CONTRACT_ID"/>
        </createIndex>
    </changeSet>
</databaseChangeLog>