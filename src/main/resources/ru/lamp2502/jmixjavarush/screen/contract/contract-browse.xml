<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://jmix.io/schema/ui/window"
        xmlns:c="http://jmix.io/schema/ui/jpql-condition"
        caption="msg://contractBrowse.caption"
        focusComponent="contractsTable">
    <data readOnly="true">
        <collection id="contractsDc"
                    class="ru.lamp2502.jmixjavarush.entity.document.Contract">
            <fetchPlan extends="_base"/>
            <loader id="contractsDl">
                <query>
                    <![CDATA[select e from Contract e]]>
                </query>
            </loader>
        </collection>
    </data>
    <facets>
        <dataLoadCoordinator auto="true"/>
        <screenSettings id="settingsFacet" auto="true"/>
    </facets>
    <actions>
        <action id="lookupSelectAction"
                caption="msg:///actions.Select"
                icon="LOOKUP_OK"
                primary="true"
                shortcut="${COMMIT_SHORTCUT}"/>
        <action id="lookupCancelAction"
                caption="msg:///actions.Cancel"
                icon="LOOKUP_CANCEL"/>
    </actions>
    <dialogMode height="600"
                width="800"/>
    <layout expand="contractsTable" spacing="true">
        <filter id="filter"
                dataLoader="contractsDl">
            <properties include=".*"/>
        </filter>
        <groupTable id="contractsTable"
                    width="100%"
                    dataContainer="contractsDc">
            <actions>
                <action id="create" type="create"/>
                <action id="edit" type="edit"/>
                <action id="exclude" type="exclude"/>
                <action id="refresh" type="refresh"/>
                <action id="remove" type="remove"/>
            </actions>
            <columns>
                <column id="createdDate"/>
                <column id="titel"/>
                <column id="customer"/>
                <column id="performer"/>
            </columns>
            <simplePagination/>
            <buttonsPanel id="buttonsPanel"
                          alwaysVisible="true">
                <button id="createBtn" action="contractsTable.create"/>
                <button id="editBtn" action="contractsTable.edit"/>
                <button id="excludeBtn" action="contractsTable.exclude"/>
                <button id="refreshBtn" action="contractsTable.refresh"/>
                <button id="removeBtn" action="contractsTable.remove"/>
            </buttonsPanel>
        </groupTable>
        <hbox id="lookupActions" spacing="true" visible="false">
            <button action="lookupSelectAction"/>
            <button action="lookupCancelAction"/>
        </hbox>
    </layout>
</window>
